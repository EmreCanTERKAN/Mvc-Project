@model BookEditViewModel


<h3 class="text-secondary fw-bolder">Kitap Düzenleme Sayfası</h3>

<input asp-for="Id" type="hidden" />
<form asp-action="Edit" asp-controller="Book" method="post">
    <div class="mb-2">
        <label class="form-label fw-bolder">Adı</label>
        <input asp-for="Title" class="form-control" type="text" />
        <span asp-validation-for="Title" class="text-danger fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label fw-bolder">Türü</label>
        <input asp-for="Genre" class="form-control" type="text" />
        <span asp-validation-for="Genre" class="text-danger fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label fw-bolder">ISBN</label>
        <input asp-for="ISBN" class="form-control" type="text" />
        <span asp-validation-for="ISBN" class="text-danger fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label fw-bolder">Kopya Adedi</label>
        <input asp-for="CopiesAvailable" class="form-control" type="number" />
        <span asp-validation-for="CopiesAvailable" class="text-danger fw-bold"></span>
    </div>
    <div class="mb-2 form">
        <label class="form-label">Yazarı</label>
        <select asp-for="AuthorId" asp-items="@( new SelectList(ViewBag.Author,"Id","FullName") )" class="form-control">
            <option selected disabled>Seçiniz</option>
        </select>
        <span asp-validation-for="AuthorId" class="text-danger fw-bold"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="List" asp-controller="Book" class="btn btn-warning">Geri Dön</a>
</form>